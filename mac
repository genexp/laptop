#!/usr/bin/env zsh

# Welcome to Matt's laptop script! Forked from thoughbot.
# Be prepared to turn your laptop (or desktop, no haters here)
# into an awesome development machine.

trap 'ret=$?; test $ret -ne 0 && printf "failed\n\n" >&2; exit $ret' EXIT

set -e

# Create ~/.bin if it doesn't exist
if [[ ! -d "$HOME/.bin/" ]]; then
  mkdir "$HOME/.bin"
fi

# Create ~/.zshrc if it doesn't exist
if [ ! -f "$HOME/.zshrc" ]; then
  touch $HOME/.zshrc
fi

# Create ~/Sites if it doesn't exist
if [ ! -d "$HOME/Sites/" ]; then
  mkdir "$HOME/Sites"
fi

fancy_echo() {
  printf "\n%b\n" "$1"
}

# Create shell to zsh
fancy_echo "Changing your shell to zsh ..."
  chsh -s $(which zsh)

if [[ -f /etc/zshenv ]]; then
  fancy_echo "Fixing OSX zsh environment bug ..."
    sudo mv /etc/{zshenv,zshrc}
fi

echo "Checking for SSH key, generating one if it doesn't exist ..."
  [[ -f ~/.ssh/id_rsa.pub ]] || ssh-keygen -t rsa

fancy_echo "Installing Homebrew, a good OS X package manager ..."
  ruby <(curl -fsS https://raw.githubusercontent.com/Homebrew/homebrew/go/install)

if ! command -v brew &>/dev/null; then
  fancy_echo "Installing Homebrew, a good OS X package manager ..."
    ruby <(curl -fsS https://raw.githubusercontent.com/Homebrew/homebrew/go/install)
else
  fancy_echo "Homebrew already installed. Skipping ..."
fi

fancy_echo "Updating Homebrew formulas ..."
  brew update

fancy_echo "Installing Node.js, Z Script ..."
  brew install node z

fancy_echo "Updating to latest Rubygems version ..."
  sudo gem update --system

fancy_echo "Installing critical Ruby gems for development ..."
  sudo gem install sass compass

fancy_echo "Installing Essential NPM Packages - Grunt, Yeoman, Bower, Gulp and NPM Check Updates because you need them ..."
  npm install -g yo grunt-cli bower npm-check-updates

fancy_echo "Cloning Vagrant dev box ..."
  git clone git@github.com:mattbanks/VVV.git ~/vvv

fancy_echo "Installing WP-CLI"
  curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar
  chmod +x wp-cli.phar
  sudo mv wp-cli.phar /usr/local/bin/wp

# Get rid of zshrc and move on to the dotfiles
rm ~/.zshrc

fancy_echo "Cloning and installing dotfiles ..."
  git clone git@github.com:mattbanks/dotfiles.git ~/.dotfiles
  cd ~/.dotfiles
  fonts/copy
  script/bootstrap
